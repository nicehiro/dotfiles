{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode"],
  "provider": {
    "anthropic": {
      "options": {
        "baseURL": "http://cc.nicehiro.org:8080/api/v1"
      }
    },
    "google": {
      "options": {
        "baseURL": "http://cc.nicehiro.org:8080/gemini/v1"
      }
    }
  },
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-sonnet-4-5",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "theme": "system",
  "permission": {
    "edit": "ask",
    "bash": "ask"
  }
}
