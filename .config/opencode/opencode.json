{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "options": {
        "baseURL": "http://cc.nicehiro.org:8080/v1"
      },
			"npm": "@ai-sdk/anthropic"
    }
  },
  "model": "openai/gpt-5.2",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "theme": "one-dark",
  "permission": {
    "edit": "ask",
    "bash": {
      "git push": "ask",
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "ls": "allow",
      "pwd": "allow"
    },
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  }
}
