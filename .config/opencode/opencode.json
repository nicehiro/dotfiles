{
  "$schema": "https://opencode.ai/config.json",
	"theme": "ghostty",
  "model": "openai/gpt-5.3-codex",
  "provider": {
    "anthropic": {
      "options": {
        "baseURL": "http://cc.nicehiro.org:8080/v1",
      }
    }
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "plugin": [
    "opencode-anthropic-auth@latest"
  ],
  "permission": {
    "edit": "ask",
    "bash": {
      "git push": "ask",
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "ls": "allow",
      "pwd": "allow"
    },
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  }
}
